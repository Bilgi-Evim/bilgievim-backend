                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "401": {
              "description": "Invalid credentials"
            }
          }
        }
      }
    },
    "/student-list": {
      "get": {
        "summary": "Get All Students",
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "List of students",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "username": {
                        "type": "string"
                      },
                      "lastname": {
                        "type": "string"
                      },
                      "school_number": {
                        "type": "string"
                      },
                      "tc": {
                        "type": "string"
                      },
                      "grade": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/create-student": {
      "post": {
        "summary": "Create Student",
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "studentUser"
                  },
                  "lastname": {
                    "type": "string",
                    "example": "StudentLastName"
                  },
                  "tc": {
                    "type": "string",
                    "example": "12345678901"
                  },
                  "school_number": {
                    "type": "string",
                    "example": "12345"
                  },
                  "password": {
                    "type": "string",
                    "example": "studentPassword"
                  },
                  "grade": {
                    "type": "string",
                    "example": "10A"
                  }
                },
                "required": ["username", "lastname", "tc", "school_number", "password"]
              }
            }
          },
          "responses": {
            "201": {
              "description": "Student registered successfully"
            },
            "400": {
              "description": "Student with given TC or school number already exists"
            },
            "403": {
              "description": "Unauthorized"
            }
          }
        }
      }
    },
